{% extends 'base.html.twig' %}

{% block body %}

    <div class="card bg-light" style="margin: auto; margin-top: 20px; width: 600px">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.username) }}

                {{ form_row(form.username, {label_attr: {class: 'radio-custom'} }) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                <button class="btn btn-outline-primary" type="submit">Register</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}